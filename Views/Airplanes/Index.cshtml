@model IEnumerable<AirPortAssignment.Models.Airplane>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AirplaneType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxNumOfPassangers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SizeInMeter)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentAirportId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PilotId)
        </th>
